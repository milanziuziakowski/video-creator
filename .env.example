# Video Creator Environment Variables Template
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# API KEYS (Required)
# =============================================================================

# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# MiniMax API Key - Get from: https://platform.minimax.chat/
# Used for: Video generation (FL2V), text-to-speech, image generation
MINIMAX_API_KEY=your_minimax_api_key_here


# =============================================================================
# STORAGE CONFIGURATION
# =============================================================================

# Base path for storing projects and temporary files
STORAGE_BASE_PATH=./storage


# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database type (PostgreSQL only)
DB_TYPE=postgresql

# Database URL - PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DB_URL=postgresql://username:password@localhost:5432/video_creator


# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO


# =============================================================================
# MCP (Model Context Protocol) CONFIGURATION
# =============================================================================

# MCP transport type: stdio or http
MCP_TRANSPORT=stdio

# MCP log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
MCP_LOG_LEVEL=DEBUG
